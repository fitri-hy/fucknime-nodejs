	<meta property="og:image" content="https://<%= site_url %>/assets/images/og.png">
	<%- include('partials/head'); %>
	<style>
        .slider-container {
            position: relative;
            overflow: hidden;
            width: 100%;
        }

        .slider {
            display: flex;
            gap: 1rem;
            transition: transform 0.5s ease-in-out;
        }

		.gradient-overlay {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			pointer-events: none;
			background: linear-gradient(90deg, rgba(255,255,255,1) 0%, rgba(255,255,255,0) 45%, rgba(255,255,255,0) 55%, rgba(255,255,255,1) 100%);
		}

        .dark .gradient-overlay {
			background: linear-gradient(90deg, rgb(23 23 23) 0%, rgba(0,0,0,0) 40%, rgba(0,0,0,0) 60%, rgb(23 23 23) 100%);
		}

        .slider-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: #28282B;
            color: white;
            border: none;
            padding: 10px;
            border-radius: 50%;
            cursor: pointer;
            z-index: 20;
            transition: background 0.3s;
        }

        .slider-btn:hover {
            background: rgba(0, 0, 0, 0.5);
        }

        #prevBtn { left: 10px; }
        #nextBtn { right: 10px; }

    </style>
</head>
